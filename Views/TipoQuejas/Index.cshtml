@model IEnumerable<SisQuejasReclamos.Models.TipoQueja>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Tipos de Quejas</h2>

<p>
    @Html.ActionLink("Agregar nuevo Tipo de Queja", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
           Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoG.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_TipoQueja }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_TipoQueja }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_TipoQueja })
        </td>
    </tr>
}

</table>
