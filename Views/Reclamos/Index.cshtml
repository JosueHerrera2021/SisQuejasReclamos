@model IEnumerable<SisQuejasReclamos.Models.Reclamo>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Reclamos</h2>

<p>
    @Html.ActionLink("Agregar nueva Reclamación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            Fecha
        </th>
        <th>
            Cliente
        </th>
        <th>
            Departamento
        </th>
        <th>
            Empleado
        </th>
        <th>
            Producto
        </th>
        <th>
            Tipo de Reclamo
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoReclamo.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoQR.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Reclamo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Reclamo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Reclamo })
        </td>
    </tr>
}

</table>
