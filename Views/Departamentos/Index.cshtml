@model IEnumerable<SisQuejasReclamos.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Departamentos</h2>

<p>
    @Html.ActionLink("Agregar nuevo Departamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Funcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Responsable)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Departamento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Departamento }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Departamento })
        </td>
    </tr>
}

</table>
